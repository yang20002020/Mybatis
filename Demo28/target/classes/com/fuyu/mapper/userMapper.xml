<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace  名称空间-->

<mapper namespace="com.fuyu.mapper.UserMapper">

    <select id="select" resultType="com.fuyu.pojo.User" >
         select *
         from tb_user
         where username= #{arg0}
         and password = #{arg1}
    </select>
</mapper>